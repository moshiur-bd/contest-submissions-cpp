{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "g++ build active file",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "build & run with c++ 11",
			"command": "clear && time ( echo 'started!' && echo '------------' && ${fileDirname}/${fileBasenameNoExtension} && echo '------------' && echo 'ended!' && echo '' && echo 'program took:')",
			"dependsOrder": "sequence",
			"dependsOn": [
				"g++ build active file"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}